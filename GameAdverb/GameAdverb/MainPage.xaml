<Page x:Class="GameAdverb.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameAdverb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Image x:Name="logo" Source="{Binding Logo}" Width="160" Height="160" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100 35 0 0"/>
        <TextBlock x:Name="nameGame" FontSize="30" TextWrapping="Wrap" FontWeight="Bold" Width="350" Height="160" VerticalAlignment="Top" Margin="100 35 0 0"/>
        <TextBlock x:Name="priceGame" FontSize="10" Width="530" Height="30" HorizontalAlignment="Left" Margin="100 300 0 0"/>
        <TextBlock x:Name="realiseGame" FontSize="10" Width="530" Height="30" HorizontalAlignment="Left" Margin="100 380 0 0"/>
    </Grid> 
</Page>

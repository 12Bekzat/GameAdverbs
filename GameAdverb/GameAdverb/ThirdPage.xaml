<Page x:Class="GameAdverb.ThirdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameAdverb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThirdPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="creator" Width="600" Height="50" Margin="0 100 0 0" FontSize="30" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="genre" Width="600" Height="50" Margin="0 30 0 0" FontSize="30" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="modeGame" Width="600" Height="50" Margin="0 30 0 0" FontSize="30" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="lastVersion" Width="600" Height="50" Margin="0 30 0 0" FontSize="30" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
